            android:name=".offers"
            android:label="Offers" />
        <activity
            android:name=".bill"
            android:label="Bill" />
        <activity
            android:name=".tabbed_menu"
            android:label="Menu" />
        <activity
            android:name=".login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".register"
            android:label="Register" />
        <activity android:name=".updateDish" />
        <activity
            android:name=".TablesSorted"
            android:label="@string/title_activity_tables_sorted"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>