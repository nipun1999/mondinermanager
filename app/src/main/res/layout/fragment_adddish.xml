<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agarw.mondinermanager_android.adddish"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Add Dish"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dishcategoryspinner"
        android:layout_alignStart="@+id/dishcategoryspinner"
        android:layout_below="@+id/dishcategoryspinner"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="70dp"
        android:text="Name"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adddishbtn"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="44dp"
        android:text="Price"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Add Name"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        />

    <EditText
        android:id="@+id/pricetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Add Price"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pricetxt"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/dishtypegroup">

        <RadioButton
            android:id="@+id/nonvegradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_below="@+id/vegradio"
            android:text="Non-Veg"
            android:textColor="@color/text"/>

        <RadioButton
            android:id="@+id/eggradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/veganradio"
            android:layout_alignStart="@+id/veganradio"
            android:layout_below="@+id/veganradio"
            android:text="Egg"
            android:textColor="@color/text"/>

        <RadioButton
            android:id="@+id/vegradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nametxt"
            android:layout_alignStart="@+id/nametxt"
            android:layout_below="@+id/nametxt"
            android:text="Veg"
            android:textColor="@color/text"/>

    </RadioGroup>

    <Spinner
        android:id="@+id/dishcategoryspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="36dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/adddishbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="15dp"
        android:text="Add Dish"
        android:background="@color/colorAccent"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/dishtypegroup"
        android:layout_marginTop="27dp"
        android:text="Type"
        android:textColor="@color/text"/>



</RelativeLayout>
