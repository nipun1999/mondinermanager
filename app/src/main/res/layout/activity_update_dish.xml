<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agarw.mondinermanager_android.adddish"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Update Dish"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/categoryTextView"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="56dp"
        android:text="Name"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categoryTextView"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:text="Category"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateDishBtn"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="55dp"
        android:text="Price"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/pricetxt"
        android:layout_alignStart="@+id/pricetxt"
        android:ems="10"
        android:hint="Add Name"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textColorHint="@color/hint" />

    <EditText
        android:id="@+id/pricetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Add Price"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pricetxt"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/dishtypegroup">

        <RadioButton
            android:id="@+id/nonvegradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_below="@+id/vegradio"
            android:text="Non-Veg"
            android:textColor="@color/text"/>

        <RadioButton
            android:id="@+id/eggradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/veganradio"
            android:layout_alignStart="@+id/veganradio"
            android:layout_below="@+id/veganradio"
            android:text="Egg"
            android:textColor="@color/text"/>

        <RadioButton
            android:id="@+id/vegradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nametxt"
            android:layout_alignStart="@+id/nametxt"
            android:layout_below="@+id/nametxt"
            android:text="Veg"
            android:textColor="@color/text"/>

    </RadioGroup>

    <Button
        android:id="@+id/updateDishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="13dp"
        android:background="@color/colorAccent"
        android:text="Update Dish"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/dishtypegroup"
        android:layout_marginTop="27dp"
        android:text="Type"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dishtypegroup"
        android:layout_alignStart="@+id/dishtypegroup"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="42dp"
        android:text="Category"
        android:textColor="@color/text"
        android:textSize="24dp" />

    <Button
        android:id="@+id/deleteDishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updateDishBtn"
        android:layout_alignBottom="@+id/updateDishBtn"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:background="@color/colorAccent"
        android:text="Delete Dish"
        android:textColor="@color/text" />


</RelativeLayout>
